<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.appli_fredi.EnregistrementDeplacement" >

    <EditText
        android:id="@+id/AssociationEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Associationtxt"
        android:layout_centerHorizontal="true"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/DateEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/AssociationEdit"
        android:layout_below="@+id/Datetxt"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/Datetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Motiftxt"
        android:layout_below="@+id/AssociationEdit"
        android:text="Date" />

    <TextView
        android:id="@+id/Motiftxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DateEdit"
        android:layout_centerHorizontal="true"
        android:text="Motif" />

    <TextView
        android:id="@+id/Intituletrajettxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Associationtxt"
        android:layout_below="@+id/MotifEdit"
        android:text="Intitulé trajet" />

    <EditText
        android:id="@+id/MotifEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/IntituleTrajetEdit"
        android:layout_below="@+id/Motiftxt"
        android:ems="10" />

    <EditText
        android:id="@+id/NbKmNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Nbkmtxt"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/Nbkmtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Motiftxt"
        android:layout_below="@+id/IntituleTrajetEdit"
        android:text="Nb km" />

    <TextView
        android:id="@+id/MtPeagetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Intituletrajettxt"
        android:layout_below="@+id/NbKmNumber"
        android:text="Montant péage" />

    <EditText
        android:id="@+id/MtPeageNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MtPeagetxt"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/NbRepastxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/NbNuitetxt"
        android:layout_below="@+id/MtPeageNumber"
        android:text="Nb de repas" />

    <EditText
        android:id="@+id/NbNuiteNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/NbRepasNumber"
        android:layout_alignParentBottom="true"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/Associationtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Association" />

    <EditText
        android:id="@+id/IntituleTrajetEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/NbKmNumber"
        android:layout_below="@+id/Intituletrajettxt"
        android:ems="10" />

    <EditText
        android:id="@+id/NbRepasNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/MtPeageNumber"
        android:layout_below="@+id/NbRepastxt"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/NbNuitetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/NbNuiteNumber"
        android:layout_alignLeft="@+id/MtPeagetxt"
        android:text="Nb de nuités" />

</RelativeLayout>